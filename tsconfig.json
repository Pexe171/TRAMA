{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["ES2021"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "app/*": ["app/*"],
      "features/*": ["features/*"],
      "core/*": ["core/*"],
      "services/*": ["services/*"]
    },
    "resolveJsonModule": true,
    "types": ["jest", "react", "react-native"]
  },
  "extends": "expo/tsconfig.base"
}
